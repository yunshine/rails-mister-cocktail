<div class="container">
  <h3>Create a New Cocktail</h3>
</div>

<div class="container my-3">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
		  <%= simple_form_for (@cocktail) do |f| %>
		    <%= f.input :name %>
		    <%= f.input :photo, as: :file %>
		    <%= f.submit class: "btn btn-primary", value: "Create This Cocktail" %>
		  <% end %>
    </div>
  </div>
</div>
